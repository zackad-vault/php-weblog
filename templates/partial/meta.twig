<!-- Charset -->
<meta charset="UTF-8">
<!-- Viewport -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
<!-- theme color meta -->
<meta name="theme-color" content="#222">
<!-- START share meta data -->
<!-- opengraph share details -->
<!-- Replace line break with space -->
{% set description = meta.description|markdown|striptags|raw|slice(0,100)|replace({"\n":" "}) %}
<meta property="og:title" content="{{ meta.title }}">
<meta property="og:type" content="{{ meta.type }}">
<meta property="og:description" content="{{ description }}">
<meta property="og:image" content="{{ meta.image }}">
<!-- twitter share details -->
<meta name="twitter:title" content="{{ meta.title }}">
<meta name="twitter:type" content="{{ meta.type }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:image:src" content="{{ meta.image }}">
<!-- google+ share details -->
<meta itemprop="name" content="{{ meta.title }}">
<meta itemprop="description" content="{{ description }}">
<meta itemprop="image" content="{{ meta.image }}">
<!-- END meta data -->
